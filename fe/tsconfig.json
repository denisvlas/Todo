{
  "compilerOptions": {
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "generated//tada//schema//todogql.graphql",
        "tadaOutputLocation": "generated//tadagraphql-env.d.ts"
      }
    ],
    "strict": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "generated/**/*", "declarations.d.ts"],

  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
